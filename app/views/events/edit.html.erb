<html> 

<body> 
	<!-- ... --> 
	<div class="container col-md-8 order-md-1">
		<div class="form-group"><br><br>
			<h3> Edite ton event ! </h3>
 <br />
	<%= form_tag url_for(action: 'update'), method: "patch" do %> 
	<%= label_tag 'Date de début' %> 
	<%= text_field_tag 'start_date', @event.start_date, class:'form-control' %> <br /> 

	<%= label_tag 'Durée' %> 
	<%= text_field_tag 'duration', @event.duration, class:'form-control' %> <br /> 

	<%= label_tag 'Titre' %> 
	<%= text_field_tag 'title', @event.title, class:'form-control' %> <br /> 

	<%= label_tag 'Description' %> 
	<%= text_area_tag 'description', @event.description, class:'form-control' %> <br />

	<%= label_tag 'Prix' %> 
	<%= text_field_tag 'price', @event.price, class:'form-control' %> <br /> 


	<%= label_tag 'Lieu'%> 
	<%= text_field_tag 'location', @event.location, class:'form-control' %> <br />

	<%= submit_tag "Mets à jour ton event", class:"btn btn-light" %> <% end %>

</div>
</body> 
</html>