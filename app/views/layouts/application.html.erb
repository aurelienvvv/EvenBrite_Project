<!DOCTYPE html>
<html>
  <head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <style>.blank{width:100px; height: 170px;}</style>
    <title>Evenbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://afeld.github.io/emoji-css/emoji.css"
     rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800|Roboto:400,500,700" rel="stylesheet"> 


  </head>

  <body>





<!-- MAIN WRAPPER -->

        <div class="st-pusher">
            <div class="st-content">
                <div class="st-content-inner">
                    <!-- HEADER -->
                    <div class="header">
    <!-- Top Bar -->
    
    <!-- Global Search -->
    <section id="sctGlobalSearch" class="global-search global-search-overlay">
    <div class="container">
        <div class="global-search-backdrop mask-dark--style-2"></div>

        <!-- Search form -->
        <form class="form-horizontal form-global-search z-depth-2-top" role="form">
            <div class="px-4">
                <div class="row">
                    <div class="col-12">
                        <input type="text" class="search-input" placeholder="Type and hit enter ...">
                    </div>
                </div>
            </div>
            <a href="#" class="close-search" data-toggle="global-search" title="Close search bar"></a>
        </form>
    </div>
</section>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar--uppercase  navbar-transparent navbar-inverse bg-dark  navbar--shadow">
        <div class="container navbar-container">
            <!-- Brand/Logo -->
                        <%= image_tag("logo/logo-1-b.png") %>
            
            <div class="d-inline-block">
                <!-- Navbar toggler  -->
                <button class="navbar-toggler hamburger hamburger-js hamburger--spring" type="button" data-toggle="collapse" data-target="#navbar_main" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>

            <div class="collapse navbar-collapse align-items-center justify-content-end" id="navbar_main">
    <!-- Navbar search - For small resolutions -->
    <div class="navbar-search-widget b-xs-bottom py-3 d-lg-none d-none">
        <form class="" role="form">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                <button class="btn btn-base-3" type="button">Go!</button>
                </span>
            </div>
        </form>
    </div>

    <!-- Navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item dropdown megamenu">
            <%= link_to 'Acceuil', root_path, class:"nav-item nav-link" %>
        </li>

                <% if is_Admin? %>
        <li class="nav-item dropdown megamenu">
            <%= link_to 'Gestion des évènements', [:admin, Event], class:"nav-item nav-link" %>
        </li>
        <% end %>
      

        <li class="nav-item dropdown megamenu">
            <%= link_to 'Créer un Event', new_event_path, class:"nav-item nav-link" %>
        </li>

        <% if user_signed_in? %>
        <li class="nav-item dropdown">

            
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Mon Profil
            </a>

            <div class="dropdown-menu dropdown-menu-xl py-0 px-0 overflow--hidden" aria-labelledby="navbar_1_dropdown_1">
                <div class="list-group rounded">
                   
                        <div class="list-group-content">
                            <div class="list-group-heading heading heading-6 mb-1"><%= link_to 'Ma page profil', user_path(current_user.id), class:"nav-item nav-link" %></div>
                        </div>
                    </a>
                        <div class="list-group-content">
                            <div class="list-group-heading heading heading-6 mb-1"><%= link_to 'Se déconnecter', destroy_user_session_path, method: :delete, class:"nav-item nav-link" %></div>
                        </div>
                    </a> 
                    </div>
                  </div>          
 </li>
 <%else%>
<li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Mon Profil
            </a>

            <div class="dropdown-menu dropdown-menu-xl py-0 px-0 overflow--hidden" aria-labelledby="navbar_1_dropdown_1">
                <div class="list-group rounded">
                   
                        <div class="list-group-content">
                            <div class="list-group-heading heading heading-6 mb-1"><%= link_to 'S\'inscrire', new_user_registration_path, class:"nav-item nav-link" %></div>
                        </div>
                    </a>
                        <div class="list-group-content">
                            <div class="list-group-heading heading heading-6 mb-1"><%= link_to 'Se connecter', new_user_session_path, class:"nav-item nav-link" %></div>
                        </div>
                    </a> 
                    </div>
                  </div>  


        <%end%>
       
                </div>
            </div>
        </li>
    </ul>

</div>

                    <!-- PAGE HEADER -->
                    <section class="slice--offset-top parallax-section parallax-section-lg border-bottom" style="background-image: url(<%= asset_path 'backgrounds/slider/img-3.jpeg' %>);">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row py-5">
                                        <div class="col-lg-6 col-md-8">
                                            <h1 class="heading heading-1 strong-400 text-white">
                                                Event Brite Project !
                                            </h1>

                                            <span class="clearfix"></span>

                                            <div class="lead mt-3 mb-3 text-white">
                                                Découvrez les évènements les plus cools de votre coin !
                                            </div>

                                            <span class="short-delimiter--style-1 mb-4"></span>

                                            <div class="btn-container">
                                                 <% if user_signed_in? %>
                                                <%= link_to 'Créer un évènement', new_event_path, class:"btn btn-styled btn-light" %>

                                                <% else %>
                                                <%= link_to 'Connectes toi pour créer un event', new_event_path, class:"btn btn-styled btn-light" %>

                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>


</div>


        </div>
    </nav>
</div>

<!-- MAIN WRAPPER -->
<% if flash[:danger] %>
    <div class="alert alert-warning" role="alert">
        Page interdite pour vous !
    </div>
<% end %>


    <%= yield %>
  </body>
</html>
