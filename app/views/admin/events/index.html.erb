<h1>Gerer les events</h1>

<table class="table table-striped">
<thread>
<tr>
	<th>Date</th>
	<th>Titre</th>
	<th>Prix</th>
	<th>Lieux</th>
	<th>Editer/Supprimer</th>
</tr>
</thread>
<tbody>

<% @event.each do |event| %>
	<tr>
		<td><%= event.start_date %></td>
		<td><%= event.title %></td>
		<td><%= event.price %></td>
		<td><%= event.location %></td>
	<td>
		<%=link_to "Editer Event", edit_event_path(event), class:"btn btn-primary my-2"%>
		<%= form_tag event_path(event), method: "delete", style: "display: inline" do %>
		<%= submit_tag "Supprimer l'event", class:"btn btn-light" %>
		<% end %>
	</td>
	</tr>
<%end%>
</tbody>

